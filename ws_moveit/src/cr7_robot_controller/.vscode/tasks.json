{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "colcon build --packages-select cr7_robot_controller",
      "options": {
        "cwd": "${workspaceFolder}/../.."
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Build cr7_robot_controller package"
    },
    {
      "label": "build all",
      "type": "shell",
      "command": "colcon build",
      "options": {
        "cwd": "${workspaceFolder}/../.."
      },
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Build all packages"
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm -rf build install log",
      "options": {
        "cwd": "${workspaceFolder}/../.."
      },
      "group": "build",
      "detail": "Clean build artifacts"
    }
  ]
}